<div>
	<div>
		<h1>New Lesson</h1>
	</div>
	<div style = "text-align:center">
		<%= form_for(:lesson, url: topic_lessons_path) do |f| %>
		<%= f.label "Title" %>
		<br />
		<%= f.text_field :title %>
		<br />
		<%= f.label "Description" %>
		<br />
		<%= f.text_area :description %>
		<br />
		<%= f.submit "Post Lesson", class: "btn btn-default"  %>
		<% end %>
	</div>
</div>