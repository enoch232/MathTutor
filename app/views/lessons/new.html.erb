<% if current_user.email == "k5m1nster@gmail.com" %>
<div>
	<div class = "new-lesson-title">
		<h1>New Lesson</h1>
	</div>
	<div style = "text-align:center">
		<%= form_for(:lesson, url: topic_lessons_path, lesson_id: @lesson.id) do |f| %>
		<%= f.label "Title" %>
		<br />
		<%= f.text_field :title, maxlength: 34, class: "form-control", style: "width:80%;margin:0 auto" %>
		<br />
		<%= f.label "Description" %>
		<br />
		<%= f.text_area :description, class: "form-control", style: "width:80%;height:500px;margin: 0 auto" %>
		<br />
		<%= f.submit "Post Lesson", class: "btn btn-default"  %>
		<% end %>
	</div>
</div>
<% else %>
<div>
	<div class = "no-access">
		<div class = "no-access-title">
			FATAL ERROR!
		</div>
		<div class = "no-access-description">
			You do not have an access to this page.
		</div>
	</div>

</div>
<% end %>