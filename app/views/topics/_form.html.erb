<div style = "text-align:center">
	<%= form_for(@topic) do |f| %>
	<%= f.label "Title" %>
	<br />
	<div>
		<%= f.text_field :title, maxlength: 34, class: "form-control", style: "width:80%;margin:0 auto;" %>
	</div>
	<br />
	<%= f.label "Description" %>
	<br />
	<%= f.text_area :description, maxlength: 200, class: "form-control", style: "width:80%;margin:0 auto;height:200px;"  %>
	<br />
	<%= f.submit class: "btn btn-default"  %>
	<% end %>
</div>