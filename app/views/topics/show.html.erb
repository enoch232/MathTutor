<% @adminemail = "k5m1nster@gmail.com" %>
<div>
	<div class = "topic-show-container hidden-class">
		<div class = "topic-show-title">
			<%= @topic.title.capitalize %>
			<%= link_to "Edit Topic", edit_topic_path(@topic), class: "btn btn-default" %>
		</div>
		<div class = "topic-show-lesson-assignment-container">
			<div class = "topic-show-lesson-container hidden-class">
				<div class = "topic-show-lesson-container-title titles">
					Lessons
				</div>
				<% if current_user.email == @adminemail %>
				<div style = "text-align:center;margin:10px;">
					<%= link_to "New Lesson", new_topic_lesson_path(topic_id: @topic.id), class: "btn btn-default" %>
				</div>
				<% end %>
				<div class = "lesson-show-list">
					<% @topic.lessons.each do |lesson| %>
					<%= link_to topic_lesson_path(topic_id: @topic.id, id: lesson.id) do %>
					<div class = "topic-lesson"><%= @topic.title.capitalize + ' - ' + lesson.title.capitalize %></div>
					<% end %>
					<% end %>
				</div>
			</div>
			<div class = "topic-show-assignment-container hidden-class">
				<div class = "topic-show-assignment-container-title titles">
					Assignments
				</div>
				<div class = "assignment-show-list">
					<% @topic.assignments.each do |assignment| %>
					<%= link_to topic_lesson_assignment_path(topic_id: @topic.id, lesson_id:assignment.lesson_id, id: assignment.id) do %>
					<div class = "topic-assignment">
						<%= assignment.title %>
					</div>
					<% end %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
	<script>
		setTimeout(function(){
			$(".topic-show-container").removeClass("hidden-class").addClass("a-fast fadeIn");
			setTimeout(function(){
			$(".topic-show-lesson-container").removeClass("hidden-class").addClass("a-fast fadeInRight");
			},500);
			setTimeout(function(){
				$(".topic-show-assignment-container").removeClass("hidden-class").addClass("a-fast fadeInRight");
			},700);
		},100);
		

	</script>
</div>