<% if current_user.email == "k5m1nster@gmail.com" %>
<div>
	<div class = "new-topic-title">
		<h1>New Topic</h1>
	</div>
	<div style = "text-align:center">
		<%= form_for(:topic, url: topics_path, topic_id: @topic.id) do |f| %>
		<%= f.label "Title" %>
		<br />
		<div>
			<%= f.text_field :title, maxlength: 34, class: "form-control", style: "width:80%;margin:0 auto;" %>
		</div>
		<br />
		<%= f.label "Description" %>
		<br />
		<%= f.text_area :description, maxlength: 200, class: "form-control", style: "width:80%;margin:0 auto;height:200px;"  %>
		<br />
		<%= f.submit "Post Topic", class: "btn btn-default"  %>
		<% end %>
	</div>
</div>
<% else %>
<div>
	<div class = "no-access">
		<div class = "no-access-title">
			FATAL ERROR!
		</div>
		<div class = "no-access-description">
			You do not have an access to this page.
		</div>
	</div>

</div>
<% end %>